@model IEnumerable<QLVXBXMD.Models.System.ChuyenXe>

@{
    ViewData["Title"] = "Danh sách Chuyến Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Chuyến Xe</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Chuyến Xe</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã Chuyến</th>
            <th>Tuyến Xe</th>
            <th>Xe</th>
            <th>Ngày Khởi Hành</th>
            <th>Giờ Khởi Hành</th>
            <th>Giá</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaChuyen</td>
                <td>@item.TuyenXe?.DiemDi - @item.TuyenXe?.DiemDen</td>
                <td>@item.Xe?.BienSoXe</td>
                <td>@item.NgayKhoiHanh.ToString("dd/MM/yyyy")</td>
                <td>@item.GioKhoiHanh</td>
                <td>@String.Format("{0:N0} VND", item.Gia)</td>
                <td>@item.TrangThai</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaChuyen" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaChuyen" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaChuyen" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>