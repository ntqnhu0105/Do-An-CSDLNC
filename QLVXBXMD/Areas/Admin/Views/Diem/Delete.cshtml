@model QLVXBXMD.Models.System.Diem

@{
    ViewData["Title"] = "Xóa Điểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Điểm</h2>

<h3>Bạn có chắc muốn xóa điểm này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Điểm</dt>
        <dd class="col-sm-10">@Model.MaDiem</dd>

        <dt class="col-sm-2">Tên Điểm</dt>
        <dd class="col-sm-10">@Model.TenDiem</dd>

        <dt class="col-sm-2">Địa Chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Tuyến Xe</dt>
        <dd class="col-sm-10">@Model.TuyenXe?.DiemDi - @Model.TuyenXe?.DiemDen</dd>

        <dt class="col-sm-2">Loại Điểm</dt>
        <dd class="col-sm-10">@Model.LoaiDiem</dd>

        <dt class="col-sm-2">Tọa Độ GPS</dt>
        <dd class="col-sm-10">@Model.ToaDoGPS</dd>
    </dl>

