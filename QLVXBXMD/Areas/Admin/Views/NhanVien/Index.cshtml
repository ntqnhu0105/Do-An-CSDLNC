@model IEnumerable<QLVXBXMD.Models.System.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>Danh sách nhân viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>Họ và tên</th>
            <th>CCCD</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Ngày sinh</th>
            <th>Chức vụ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HovaTen</td>
                <td>@item.CCCD</td>
                <td>@item.SDT</td>
                <td>@item.Email</td>
                <td>@item.DiaChi</td>
                <td>@(item.NgaySinh?.ToString("dd/MM/yyyy"))</td>
                <td>@item.ChucVu</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Thêm Nhân Viên</a>
