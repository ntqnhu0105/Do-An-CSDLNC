@model QLVXBXMD.Models.System.NhanVien

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chi tiết Nhân viên</h2>

<div>
    <h4>Thông tin Nhân viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã NV</dt>
        <dd class="col-sm-10">@Model.MaNV</dd>

        <dt class="col-sm-2">Họ và Tên</dt>
        <dd class="col-sm-10">@Model.HovaTen</dd>

        <dt class="col-sm-2">CCCD</dt>
        <dd class="col-sm-10">@Model.CCCD</dd>

        <dt class="col-sm-2">SĐT</dt>
        <dd class="col-sm-10">@Model.SDT</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.NgaySinh?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Nhà xe</dt>
        <dd class="col-sm-10">@Model.NhaXe?.TenNhaXe</dd>

        <dt class="col-sm-2">Chức vụ</dt>
        <dd class="col-sm-10">@Model.ChucVu</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaNV" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
