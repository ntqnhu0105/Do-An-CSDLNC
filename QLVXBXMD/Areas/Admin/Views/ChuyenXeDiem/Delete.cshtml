@model QLVXBXMD.Models.System.ChuyenXe

@{
    ViewData["Title"] = "Xóa Chuyến Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Chuyến Xe</h2>

<h3>Bạn có chắc muốn xóa chuyến xe này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Chuyến</dt>
        <dd class="col-sm-10">@Model.MaChuyen</dd>

        <dt class="col-sm-2">Tuyến Xe</dt>
        <dd class="col-sm-10">@Model.TuyenXe?.DiemDi - @Model.TuyenXe?.DiemDen</dd>

        <dt class="col-sm-2">Xe</dt>
        <dd class="col-sm-10">@Model.Xe?.BienSoXe</dd>

        <dt class="col-sm-2">Ngày Khởi Hành</dt>
        <dd class="col-sm-10">@Model.NgayKhoiHanh.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Giờ Khởi Hành</dt>
        <dd class="col-sm-10">@Model.GioKhoiHanh</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@String.Format("{0:N0} VND", Model.Gia)</dd>

        <dt class="col-sm-2">Trạng Thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaChuyen" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>