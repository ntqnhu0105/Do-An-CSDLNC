@model IEnumerable<QLVXBXMD.Models.System.LoaiXe>

@{
    ViewData["Title"] = "Danh sách Loại Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Loại Xe</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Loại Xe</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã Loại</th>
            <th>Tên Loại</th>
            <th>Mô Tả</th>
            <th>Số Lượng Ghế</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLoai</td>
                <td>@item.TenLoai</td>
                <td>@item.MoTa</td>
                <td>@item.SoLuongGhe</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaLoai" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaLoai" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaLoai" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>