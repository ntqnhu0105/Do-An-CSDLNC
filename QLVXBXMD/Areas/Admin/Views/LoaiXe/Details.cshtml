@model QLVXBXMD.Models.System.LoaiXe

@{
    ViewData["Title"] = "Chi tiết Loại Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết Loại Xe</h2>

<div>
    <h4>Thông tin Loại Xe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã Loại</dt>
        <dd class="col-sm-10">@Model.MaLoai</dd>

        <dt class="col-sm-2">Tên Loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>

        <dt class="col-sm-2">Số Lượng Ghế</dt>
        <dd class="col-sm-10">@Model.SoLuongGhe</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaLoai" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>