@model QLVXBXMD.Models.System.LoaiXe

@{
    ViewData["Title"] = "Xóa Loại Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Loại Xe</h2>

<h3>Bạn có chắc muốn xóa loại xe này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Loại</dt>
        <dd class="col-sm-10">@Model.MaLoai</dd>

        <dt class="col-sm-2">Tên Loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>

        <dt class="col-sm-2">Số Lượng Ghế</dt>
        <dd class="col-sm-10">@Model.SoLuongGhe</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaLoai" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>