@model QLVXBXMD.Models.System.NhaXe

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chi tiết Nhà Xe</h2>

<div>
    <h4>Thông tin Nhà Xe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã Nhà Xe</dt>
        <dd class="col-sm-10">@Model.MaNhaXe</dd>

        <dt class="col-sm-2">Tên Nhà Xe</dt>
        <dd class="col-sm-10">@Model.TenNhaXe</dd>

        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Số Điện Thoại</dt>
        <dd class="col-sm-10">@Model.SDT</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaNhaXe" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>