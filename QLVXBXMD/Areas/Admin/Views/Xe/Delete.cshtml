@model QLVXBXMD.Models.System.Xe

@{
    ViewData["Title"] = "Xóa Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Xe</h2>

<h3>Bạn có chắc muốn xóa xe này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Xe</dt>
        <dd class="col-sm-10">@Model.MaXe</dd>

        <dt class="col-sm-2">Biển Số Xe</dt>
        <dd class="col-sm-10">@Model.BienSoXe</dd>

        <dt class="col-sm-2">Loại Xe</dt>
        <dd class="col-sm-10">@Model.LoaiXe?.TenLoai</dd>

        <dt class="col-sm-2">Nhà Xe</dt>
        <dd class="col-sm-10">@Model.NhaXe?.TenNhaXe</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaXe" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>